{% extends 'base.html.twig' %}

{% block title %}Donation{% endblock %}

{% block body %}
    <h1>Donation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ donation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ donation.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ donation.lastname }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ donation.amount }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ donation.description }}</td>
            </tr>
            <tr>
                <th>RegisterDate</th>
                <td>{{ donation.registerDate ? donation.registerDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Registrado por</th>
                <td>{{ donation.registeredBy.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('donation_index') }}">back to list</a>

    <a href="{{ path('donation_edit', {'id': donation.id}) }}">edit</a>

    {{ include('donation/_delete_form.html.twig') }}
{% endblock %}
