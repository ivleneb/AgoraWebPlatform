{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ member.name }}</td>
            </tr>
            <tr>
                <th>FatherLastname</th>
                <td>{{ member.fatherLastname }}</td>
            </tr>
            <tr>
                <th>MotherLastname</th>
                <td>{{ member.motherLastname }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ member.birthdate ? member.birthdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ member.address }}</td>
            </tr>
            <tr>
                <th>District</th>
                <td>{{ member.district }}</td>
            </tr>
            <tr>
                <th>Province</th>
                <td>{{ member.province }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ member.region }}</td>
            </tr>
            <tr>
                <th>DegreeOfInstruction</th>
                <td>{{ member.degreeOfInstruction }}</td>
            </tr>
            <tr>
                <th>CivilStatus</th>
                <td>{{ member.civilStatus }}</td>
            </tr>
            <tr>
                <th>Dni</th>
                <td>{{ member.dni }}</td>
            </tr>
            <tr>
                <th>CellphoneNumber</th>
                <td>{{ member.cellphoneNumber }}</td>
            </tr>
            <tr>
                <th>NonVirtualRegister</th>
                <td>{{ member.nonVirtualRegister ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>RegisterDate</th>
                <td>{{ member.registerDate ? member.registerDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('member_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('member_edit', {'id': member.id}) }}">edit</a>

    {{ include('member/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
